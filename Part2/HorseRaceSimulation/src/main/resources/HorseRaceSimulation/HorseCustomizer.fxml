<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="HorseRaceSimulation.HorseCustomizerController">

    <Label text="Horse Customizer" style="-fx-font-size: 24px;"/>

    <Label text="Horse Name:"/>
    <TextField fx:id="nameField" prefWidth="200"/>

    <Label text="Breed:"/>
    <ComboBox fx:id="breedComboBox" prefWidth="200"/>

    <Label text="Coat Color:"/>
    <ComboBox fx:id="colorComboBox" prefWidth="200"/>

    <Label text="Symbol:"/>
    <ComboBox fx:id="symbolComboBox" prefWidth="200"/>

    <Label text="Equipment:"/>
    <CheckBox fx:id="saddleCheckBox" text="Saddle"/>
    <CheckBox fx:id="horseshoeCheckBox" text="Horseshoes"/>
    <CheckBox fx:id="accessoryCheckBox" text="Accessories"/>

    <Button text="Save Horse" onAction="#saveHorse"/>
    <Button text="Back to Menu" onAction="#goBack"/>

</VBox>
