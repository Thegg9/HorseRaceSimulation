<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="HorseRaceSimulation.TrackDesignerController">

    <Label text="Track Designer" style="-fx-font-size: 24px;"/>

    <Label text="Number of Lanes:"/>
    <Spinner fx:id="laneSpinner" prefWidth="150"/>

    <Label text="Track Length (meters):"/>
    <Spinner fx:id="lengthSpinner" prefWidth="150"/>

    <Label text="Track Shape:"/>
    <ComboBox fx:id="shapeComboBox" prefWidth="150"/>

    <Label text="Weather Conditions:"/>
    <ComboBox fx:id="weatherComboBox" prefWidth="150"/>

    <Button text="Save Track" onAction="#saveTrack"/>
    <Button text="Back to Menu" onAction="#goBack"/>

</VBox>
